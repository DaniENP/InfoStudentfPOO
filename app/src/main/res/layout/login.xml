<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="375dp"
        android:layout_height="326dp"
        app:srcCompat="@drawable/infostudentf__1_"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="-3dp" />

    <Button
        android:id="@+id/IngresarB"
        android:layout_width="136dp"
        android:layout_height="64dp"
        android:layout_marginBottom="176dp"
        android:text="Ingresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/UserB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:ems="10"
        android:text="Usuario"
        android:textColor="#EFDEDE"
        app:layout_constraintBottom_toTopOf="@+id/IngresarB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ContraB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:text="Contraseña"
        android:textColor="#EDE8E8"
        app:layout_constraintBottom_toTopOf="@+id/IngresarB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/RegitrarAqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No estas registrado? Haz click aqui"
        android:textColor="#E8DFDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IngresarB" />

</androidx.constraintlayout.widget.ConstraintLayout>